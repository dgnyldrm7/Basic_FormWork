@{
    ViewData["Title"] = "Home Page";
}



<div class="container row justify-content-center">
    <div class="col-md-8 card" >
        
        <form class="p-2" method="post" asp-action="Index">
            

            <div asp-validation-summary="All" ></div>


            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" placeholder="Name" />
            </div>
            <div class="form-group my-2">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-control" placeholder="Email" />
            </div>
            <div class="form-group my-2">
                <label for="exampleFormControlSelect1">Choose</label>
                <select class="form-control" id="exampleFormControlSelect1" name="exampleFormControlSelect1">
                    <option value="true">Kırmızı</option>
                    <option value="false">Sarı</option>
                    <option value="" selected>Seçiniz</option>
                    
                </select>
            </div>
            <div class="form-group my-2">
                <label for="formFile" class="form-label"> Upload</label>
                <input type="file" name="formFile" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary my-2">Apply</button>
        </form>



    </div>
</div>
    
